<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
</head>
<body>
<div>Products</div>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.price }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div>Orders</div>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>ProductId</th>
        <th>Amount</th>
    </tr>
    </thead>
    <tbody>
    {% for order in orders %}
        <tr>
            <td>{{ order.id }}</td>
            <td>{{ order.productId }}</td>
            <td>{{ order.amount }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div>Sales</div>
<div>{{ sales }}</div>

</body>
</html>
